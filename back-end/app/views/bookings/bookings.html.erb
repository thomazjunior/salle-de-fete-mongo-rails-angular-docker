<!-- app/views/bookings/index.html.erb -->
<h1>Liste des Réservations</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nom du Client</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.id %></td>
        <td><%= booking.client_name %></td>
        <td><%= booking.date %></td>
        <td>
          <!-- Lien pour afficher les détails d'une réservation -->
          <%= link_to 'Voir', booking_path(booking) %> |
          <!-- Lien pour modifier une réservation -->
          <%= link_to 'Modifier', edit_booking_path(booking) %> |
          <!-- Lien pour supprimer une réservation avec confirmation -->
          <%= link_to 'Supprimer', booking_path(booking), method: :delete, data: { confirm: 'Êtes-vous sûr ?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Lien pour ajouter une nouvelle réservation -->
<%= link_to 'Nouvelle Réservation', new_booking_path %>

<!-- app/views/bookings/show.html.erb -->
<h1>Détails de la Réservation</h1>
<p><strong>ID:</strong> <%= @booking.id %></p>
<p><strong>Nom du Client:</strong> <%= @booking.client_name %></p>
<p><strong>Date:</strong> <%= @booking.date %></p>

<!-- Lien pour modifier la réservation actuelle -->
<%= link_to 'Modifier', edit_booking_path(@booking) %> |
<!-- Lien pour retourner à la liste des réservations -->
<%= link_to 'Retour à la liste', bookings_path %>
